<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sampling.SamplingFragment1">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_horizontal_margin4"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/data_sampling1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    tools:ignore="SmallSp" />

                <TableRow android:background="@drawable/bg_view">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="样品编号" />

                    <TextView
                        android:id="@+id/SAMPLE_NO"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:autofillHints=""
                        tools:ignore="LabelFor" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    tools:ignore="SmallSp" />

                <TableRow android:background="@drawable/bg_view">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="采样站位" />

                    <TextView
                        android:id="@+id/SAMPLING_POS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:autofillHints=""
                        tools:ignore="LabelFor" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    tools:ignore="SmallSp" />

                <TableRow android:background="@drawable/bg_view">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="样品标记" />

                    <TextView
                        android:id="@+id/SAMPLE_MARK"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:autofillHints=""
                        tools:ignore="LabelFor" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    tools:ignore="SmallSp" />

                <TableRow android:background="@drawable/bg_view">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="实验室编号" />

                    <EditText
                        android:id="@+id/SYSBH"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:autofillHints=""
                        android:inputType="text"
                        tools:ignore="LabelFor" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    tools:ignore="SmallSp" />

                <TableRow android:background="@drawable/bg_view">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="样品类型" />

                    <Spinner
                        android:id="@+id/YPLX"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:overlapAnchor="false" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    tools:ignore="SmallSp" />

                <TableRow
                    android:id="@+id/layout_YPLXQT"
                    android:background="@drawable/bg_view"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="其它" />

                    <EditText
                        android:id="@+id/YPLXQT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    tools:ignore="SmallSp" />

                <TableRow android:background="@drawable/bg_view">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="委托单位" />

                    <EditText
                        android:id="@+id/WTDW"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    tools:ignore="SmallSp" />

                <TableRow android:background="@drawable/bg_view">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="采样依据" />

                    <Spinner
                        android:id="@+id/CYYJ"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    tools:ignore="SmallSp" />

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_view">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="便携式水质分析仪"
                        android:textStyle="bold" />

                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="设备型号" />

                        <Spinner
                            android:id="@+id/SBXH"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="设备编号" />

                        <EditText
                            android:id="@+id/SBBH"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3" />
                    </TableRow>

                </TableLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    tools:ignore="SmallSp" />

                <TableRow android:background="@drawable/bg_view">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="现场测定依据" />

                    <Spinner
                        android:id="@+id/XCCDYJ"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    tools:ignore="SmallSp" />

                <TableRow android:background="@drawable/bg_view">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="废水流向" />

                    <Spinner
                        android:id="@+id/FSLX"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    tools:ignore="SmallSp" />

                <TableRow
                    android:id="@+id/layout_FSLXQT"
                    android:background="@drawable/bg_view"

                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="其它" />

                    <EditText
                        android:id="@+id/FSLXQT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    tools:ignore="SmallSp" />

                <TableRow android:background="@drawable/bg_view">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="处理设施" />

                    <EditText
                        android:id="@+id/CLSS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="处理设施" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3sp"
                    tools:ignore="SmallSp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:background="#cccccc"
                    tools:ignore="SmallSp" />

            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3sp"
                tools:ignore="SmallSp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="采样点列表" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3sp"
                tools:ignore="SmallSp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_samplingInfo1_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="#cccccc"
                tools:ignore="SmallSp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3sp"
                tools:ignore="SmallSp" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_view">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="ph计校准"
                    android:textStyle="bold" />

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="校准点" />

                    <Spinner
                        android:id="@+id/JZD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />
                </TableRow>

            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3sp"
                tools:ignore="SmallSp" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_view">

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="标准溶液" />

                    <Spinner
                        android:id="@+id/BZRY"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="测定值" />

                    <EditText
                        android:id="@+id/CDZ"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />
                </TableRow>

            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3sp"
                tools:ignore="SmallSp" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_view">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="样品现场处理"
                    android:textStyle="bold" />

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="固定剂加入情况" />

                    <Spinner
                        android:id="@+id/GDJJRQK"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>