                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:autofillHints=""
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:nextFocusForward="@+id/details_SAMPLING_NOTICE_CODE"
